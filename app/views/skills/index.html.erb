<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr scope="row">
        <td><%= skill.name %></td>
        <td><%= link_to 'Show', skill, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path, class: "btn btn-primary"  %>
