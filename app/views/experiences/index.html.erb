<p id="notice"><%= notice %></p>

<h1>Experiences</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Project name</th>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr  scope="row">
        <td><%= experience.project_name %></td>
        <td><%= experience.from %></td>
        <td><%= experience.to %></td>
        <td><%= experience.description %></td>
        <td><%= link_to 'Show', experience , class: "btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experience', new_experience_path , class: "btn btn-primary" %>
