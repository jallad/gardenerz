<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Subject</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr scope="row">
        <td><%= request.subject %></td>
        <td><%= request.description %></td>
        <td><%= link_to 'Show', request, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_request_path(request), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path, class: "btn btn-primary"  %>
